{
    "name": "magepeople/pdf-support",
    "description": "PDF Support for MagePeople WordPress plugins",
    "type": "wordpress-plugin",
    "require": {
        "php": "^8.1",
        "mpdf/mpdf": "^8.2",
        "psr/http-message": "^1.1",
        "psr/log": "2.0.0"
    },
    "conflict": {
        "psr/log": ">=3.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "autoload": {
        "psr-4": {
            "MagePeople\\PdfSupport\\": "src/"
        }
    }
}